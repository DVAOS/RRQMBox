<Window x:Class="RPCStressTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RPCStressTesting"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Height="450"
        Width="800"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Margin="5" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="客户端数量：" />
            <TextBox x:Name="ClientCount" Text="1000" Width="60" />

            <TextBlock Text="测试总次数：" Margin="20,0,0,0" />
            <TextBox x:Name="TestCount" Text="1000" Width="60" />

            <Button Content="开始测试" Margin="10,0" Click="Button_Click" />
        </StackPanel>
        <DataGrid x:Name="DG" Grid.Row="1" />
    </Grid>
</Window>
