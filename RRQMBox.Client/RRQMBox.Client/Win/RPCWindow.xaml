<windows:RRQMWindow x:Class="RRQMBox.Client.Win.RPCWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="RRQM_Controls"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:local="clr-namespace:RRQMBox.Client.Win"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:windows="RRQM_Windows"
                    Title="TcpClientWindow"
                    Height="600"
                    Width="850"
                    Style="{DynamicResource RRQMWindowStyle}"
                    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Margin="5" Header="客户端测试">
            <WrapPanel Margin="10">
                <controls:CorrugatedButton Content="测试RRQM TCP Binary" Height="40" Width="200" Margin="10" Click="RRQMBinaryButton_Click" />
                <controls:CorrugatedButton Content="测试RRQM TCP Xml" Height="40" Width="200" Margin="10" Click="RRQMXmlButton_Click" />
                <controls:CorrugatedButton Content="测试RRQM UDP Binary" Height="40" Width="200" Margin="10" Click="RRQMUDPBinaryButton_Click" />
                <controls:CorrugatedButton Content="测试XmlRpc" Height="40" Width="200" Margin="10" Click="XmlRpcButton_Click" />
                <controls:CorrugatedButton Content="测试JsonRpc" Height="40" Width="200" Margin="10" Click="JsonRpcButton_Click" />
            </WrapPanel>
        </GroupBox>
        <GroupBox Grid.Row="3" Margin="3" Header="日志输出">
            <TextBox x:Name="msgBox" Background="Transparent" BorderThickness="0"
                     Foreground="{DynamicResource foregroundColor}" />
        </GroupBox>
    </Grid>
</windows:RRQMWindow>
