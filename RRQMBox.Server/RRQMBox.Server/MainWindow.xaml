<Window x:Class="RRQMBox.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RRQMBox.Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Button x:Name="CreatTcpService" Height="30" Margin="5" Content="启动普通TCP服务器" Click="CreatTcpService_Click"/>
                <Button x:Name="CreatFileService" Height="30" Margin="5" Content="启动文件服务器" Click="CreatFileService_Click"/>
            </StackPanel>
        </ScrollViewer>
        <TextBox x:Name="msgBox" Grid.Column="1" Margin="5"/>
    </Grid>
</Window>
